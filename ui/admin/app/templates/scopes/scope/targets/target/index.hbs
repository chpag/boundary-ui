<Rose::Layout::Page as |page|>

  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    <Targets::Target::Header @model={{@model}} />
  </page.header>

  <page.navigation>
    <Targets::Target::Nav @model={{@model}} />
  </page.navigation>

  <page.actions>
    <Targets::Target::Actions @model={{@model}} />
  </page.actions>

  <page.body>
    <Layout::Sidebar as |sb|>
      <sb.Body>
        <Form::Target
          @model={{@model}}
          @submit={{route-action 'saveWithAddress' @model}}
          @cancel={{route-action 'cancel' @model}}
        />
      </sb.Body>

      {{#if (can 'setStorageBucket target' @model)}}
        <sb.Sidebar>
          <div class='target-sidebar'>
            <div class='title-wrapper'>
              <h3>{{t 'resources.target.form.sidebar.label'}}</h3>
              <Hds::Button
                @color='secondary'
                @text='settings'
                @isIconOnly={{true}}
                @icon='settings'
                @route='scopes.scope.targets.target.enable-session-recording'
              />
            </div>
            <p class='description'>
              {{t 'resources.target.form.sidebar.help'}}
            </p>
            {{#if @model.storage_bucket_id}}
              <LinkListPanel as |P|>
                <P.Item
                  @icon='cloud-upload'
                  @color='boundary'
                  @text={{@model.storage_bucket_id}}
                  @route='scopes.scope.storage-buckets.storage-bucket'
                  @model={{@model.storage_bucket_id}}
                >
                  <Hds::Badge
                    @text={{t 'resources.storage-bucket.types.aws_s3'}}
                    @icon='aws-color'
                  />
                </P.Item>
              </LinkListPanel>
            {{else}}
              <Hds::Button
                @text={{t 'resources.target.actions.enable-recording'}}
                @color='secondary'
                @route='scopes.scope.targets.target.enable-session-recording'
              />
            {{/if}}
          </div>
        </sb.Sidebar>
      {{/if}}
    </Layout::Sidebar>

  </page.body>

</Rose::Layout::Page>
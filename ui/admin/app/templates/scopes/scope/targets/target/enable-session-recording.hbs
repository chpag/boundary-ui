{{page-title (t 'resources.target.actions.enable-session-recording')}}

<Rose::Layout::Page as |page|>
  <page.breadcrumbs>
    <BreadCrumbs />
  </page.breadcrumbs>

  <page.header>
    <h2>{{t 'resources.target.enable-session-recording.messages.add.title'}}
      <DocLink @doc='target.enable-session-recording' @iconSize='large' />
    </h2>
    {{!TODO: add description for enabling session recording}}
    <Copyable
      @text={{@model.id}}
      @buttonText={{t 'actions.copy-to-clipboard'}}
      @acknowledgeText={{t 'states.copied'}}
    >
      <code>{{@model.id}}</code>
    </Copyable>
  </page.header>

  <page.body>
    <Form::EnableSessionRecording
      @model={{@model}}
      @submit={{route-action 'save' @model}}
      @cancel={{route-action 'cancel'}}
    />
  </page.body>

</Rose::Layout::Page>